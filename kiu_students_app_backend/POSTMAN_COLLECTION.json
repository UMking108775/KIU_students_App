            "body": {
              "mode": "raw",
              "raw": "{\n    \"kiu_id\": \"12345\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "description": "Login with KIU ID and password to get authentication token"
          },
          "response": []
